---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const interviews = (await getCollection('interviews')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				text-align: center;
				margin: 4rem 0;
			}
			.hero h1 {
				font-size: 3rem;
				margin-bottom: 1rem;
			}
			.hero p {
				font-size: 1.25rem;
				color: rgb(var(--gray));
			}
			.interviews-list {
				margin: 3rem 0;
			}
			.interviews-list h2 {
				margin-bottom: 2rem;
			}
			.interview-item {
				margin-bottom: 2rem;
				padding: 1.5rem;
				border: 1px solid rgb(var(--gray-light));
				border-radius: 8px;
				transition: 0.2s ease;
			}
			.interview-item:hover {
				border-color: rgb(var(--accent));
				box-shadow: var(--box-shadow);
			}
			.interview-item h3 {
				margin: 0 0 0.5rem 0;
			}
			.interview-item a {
				text-decoration: none;
				color: rgb(var(--black));
			}
			.interview-item a:hover h3 {
				color: rgb(var(--accent));
			}
			.guest {
				color: rgb(var(--gray));
				font-style: italic;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="hero">
				<h1>{SITE_TITLE}</h1>
				<p>{SITE_DESCRIPTION}</p>
			</div>

			<div class="interviews-list">
				<h2>Interviews</h2>
				{interviews.map((interview) => (
					<div class="interview-item">
						<a href={`/interviews/${interview.id}/`}>
							<h3>{interview.data.title}</h3>
							<p class="guest">with {interview.data.guest}</p>
							<p>{interview.data.description}</p>
							<p class="date">
								<FormattedDate date={interview.data.pubDate} />
							</p>
						</a>
					</div>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
